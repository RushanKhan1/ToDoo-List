<%- include("header") %>

<div class="box" id="heading">
	  <h1><%= listTitle %></h1>
      </div>

	  <div class="box">
	      
	  <% for (var i = 0; i < listItems.length; i++) { %>
	      <div class="item">
		  <input type="checkbox">
	      <p><%= listItems[i] %></p>
	     </div> <!-- closure of item -->
	  <% } %>

      
      <form action="/" method="post" class="item">
	  <input type="text" name="text" placeholder="New Item" autocomplete="off">
	  <button type="submit" name="button" value="<%= listTitle %>">+</button>
      </form>
	  </div> <!-- closure of box -->
      
<form action="/switch" method="post">
    <% if( listTitle == "Work") { %>
	<button class="switch box" type="submit" value="general" name="button">Switch to General List</button>
    <% } else { %>
    <button class="switch box" type="submit" value="work" name="button">Switch to Work List</button>
    <% } %>
   </form>
   
